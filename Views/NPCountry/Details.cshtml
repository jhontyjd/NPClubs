@model NPClubs.Models.Country

@{
    ViewData["Title"] = "Details";
}

<h1>Country Details</h1>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CountryCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalPattern)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalPattern)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhonePattern)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhonePattern)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FederalSalesTax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FederalSalesTax)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProvinceTerminology)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProvinceTerminology)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CountryCode">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
               Province Code
            <th>
                Province Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Province)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProvinceCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
